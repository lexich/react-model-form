{
    "compilerOptions": {
      "strict": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2015", "dom", "es2018.Promise"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es2015",
      "jsx": "react",
      "esModuleInterop": true,
      "baseUrl": "./",
      "outDir": "./lib"
    },
    "include": ["src/**/*", "stories/**/*"],
    "exclude": ["node_modules", "build", "scripts"],
    "compileOnSave": false
  }
