{
    "compilerOptions": {
      "strict": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2015", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es2015",
      "jsx": "react",
      "esModuleInterop": true,
      "baseUrl": "./",
      "outDir": "./lib"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "scripts", "stories"],
    "compileOnSave": false
  }
